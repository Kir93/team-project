<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="chose">
  
  <select id="getChose" parameterType="Map" resultType="Map"> 
  	SELECT no, pno FROM chose WHERE delYn = 'N' AND uno = #{uno}
  </select>
  
  <insert id="setChose" parameterType="Map">
  	INSERT INTO chose (pno, uno) VALUE (#{pno}, #{uno});
  </insert>
  
  <update id="delChose" parameterType="Map">
  	UPDATE chose SET delYn = "D" WHERE no = #{no}
  </update>
</mapper>